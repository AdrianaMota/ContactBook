<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ContactBook.ContactDetailPage">
    <StackLayout>
        <TableView Intent="Form" x:Name="tableView" >
            <TableRoot>
                <TableSection Title="NAME">
                    <EntryCell x:Name="firstName" Label="First Name" Text="{Binding FirstName}"/>
                    <EntryCell x:Name="lastName" Label="Last Name" Text="{Binding LastName}"/>
                </TableSection>
                <TableSection Title="CONTACT">
                    <EntryCell x:Name="email" Keyboard="Email" Label="Email" Text="{Binding Email}"/>
                    <EntryCell x:Name="phone" Keyboard="Telephone" Label="Phone" Text="{Binding Phone}"/>
                </TableSection>
                <TableSection Title="OTHER">
                    <SwitchCell Text="Blocked" On="False"/>
                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Save" HorizontalOptions="CenterAndExpand" Padding="0, 5" Clicked="ButtonClicked"/>

    </StackLayout>
</ContentPage>
